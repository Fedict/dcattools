<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>dcattools</artifactId>
    <groupId>be.fedict.dcat</groupId>
    <version>2.8</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>scrapers</artifactId>
  <name>scrapers</name>
  <version>2.8</version>
  <description>Various scrapers for Belgian data portals</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>be.fedict.dcat.scrapers.Main</mainClass>
            </transformer>
            <transformer />
          </transformers>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <slf4j.version>1.7.28</slf4j.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <rdf4j.version>3.0.5-SNAPSHOT</rdf4j.version>
  </properties>
</project>

