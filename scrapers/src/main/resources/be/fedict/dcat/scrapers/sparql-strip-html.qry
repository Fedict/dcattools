# Remove various HTML tags from literals, this reduces layout-issues when harvesting data from other sites.

PREFIX dcterms: <http://purl.org/dc/terms/>

DELETE { ?s ?p ?o }
INSERT { ?s ?p ?clean }
WHERE { 
	?s ?p ?o .
	BIND (
		REPLACE(
			REPLACE(
				REPLACE(
					REPLACE(
						REPLACE(?o, "<br>", "\n", "i"), 
					"</p>", "\n", "i"),
				"<[^>]+>", ""),
			"^\n *", ""),
		"\n *$", "")
	as ?clean)
	VALUES ?p { dcterms:title dcterms:description }
	FILTER ISLITERAL(?o) 
}
